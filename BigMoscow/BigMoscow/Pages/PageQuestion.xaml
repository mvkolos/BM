<Page x:Class="BigMoscow.Pages.PageQuestion"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
       xmlns:properties="clr-namespace:BigMoscow.Properties"
      xmlns:local="clr-namespace:BigMoscow.Pages"
      mc:Ignorable="d" 
      DataContext="PageQuestion.xaml.cs"
      Height="1080" Width="1920"
      Title="PageQuestion" Loaded="Page_Loaded">
    <Page.Background>
        <ImageBrush ImageSource="/BigMoscow;component/UI/MainScreen/mainscreenMain.jpg"/>
    </Page.Background>
    

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        
        <Menu HorizontalAlignment="Center" FontSize="30" Background="{x:Null}">
            <MenuItem Header="RU" Checked="RU_click" />
            <MenuItem Header="EN" Click="en_click" />
        </Menu>
        <Label Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" Content="{x:Static properties:Resources.TextBlockFeedBack}" FontSize="30"/>
        <Label Grid.Row="2" Grid.Column="1" Content="{x:Static properties:Resources.You_are}" FontSize="30"/>
        <ComboBox Name="combobox_you_are" Grid.Row="3" IsEditable="True" Grid.Column="1">
            <ComboBoxItem Content="{x:Static properties:Resources.Investor}"/>
            <ComboBoxItem Content="{x:Static properties:Resources.hired_manager}"/>
            <ComboBoxItem Content="{x:Static properties:Resources.business_owner}"/>
            <ComboBoxItem Content="{x:Static properties:Resources.novice_businessman}"/>
        </ComboBox>
        
        <Label Grid.Row="4" Grid.Column="1" Content="{x:Static properties:Resources.Your_country}" FontSize="30"/>
        <ComboBox  Loaded="combobox_country_Loaded" Name="combobox_country" IsEditable="True" Grid.Row="5" Grid.Column="1">
           
        </ComboBox>
        <Label Grid.Row="6" Grid.Column="1" Content="{x:Static properties:Resources.Your_business_sector}" FontSize="30"/>
        <ComboBox Name="combobox_business"   Grid.Row="7" IsEditable="True" Grid.Column="1">
            <ComboBoxItem Content="{x:Static properties:Resources.Display_category}"/>
            <ComboBoxItem Content="{x:Static properties:Resources.Hall}"/>
            <ComboBoxItem Content="{x:Static properties:Resources.Country}"/>
            <ComboBoxItem Content="{x:Static properties:Resources.German_Chamber_of_Commerce}"/>
            <ComboBoxItem Content="{x:Static properties:Resources.Federal_State}"/>
        </ComboBox>
        <RadioButton Name="r1" Grid.Row="8" Grid.Column="1" Content="{x:Static properties:Resources.t1}" FontSize="30"/>
        <RadioButton Name="r2" Grid.Row="9" Grid.Column="1" Content="{x:Static properties:Resources.t2}" FontSize="30"/>
        <RadioButton Name="r3" Grid.Row="10" Grid.Column="1" Content="{x:Static properties:Resources.t3}" FontSize="30"/>
        <RadioButton Name="r4" Grid.Row="11" Grid.Column="1" Content="{x:Static properties:Resources.t4}" FontSize="30"/>
        <Label Grid.Row="12" Grid.Column="1" Content="{x:Static properties:Resources.Your_q}" />
        <TextBox Name="texbox_question" Grid.Row="13" Grid.Column="1" Grid.RowSpan="3"/>
        <Button Grid.Row="16" Grid.Column="1"  Content="{x:Static properties:Resources.button_send_smth}" Click="Button_Click" />
    </StackPanel>
</Page>
