<Page x:Class="BigMoscow.Pages.PageSend"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BigMoscow"
       xmlns:properties="clr-namespace:BigMoscow.Properties"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="PageSend" Loaded="Page_Loaded">
    <Page.Background>
        <ImageBrush ImageSource="/BigMoscow;component/UI/MainScreen/mainscreenMain.png"/>
    </Page.Background>

    <StackPanel VerticalAlignment="Center" Width="600" Height="280">
        <StackPanel.Background>
            <ImageBrush ImageSource="/BigMoscow;component/UI/Feedback/feedback_paddle.png"/>
        </StackPanel.Background>

        <TextBox TextAlignment="Center" Padding="10" Name="textbox_Email" Height="65" Width="500" Opacity="0.7" Margin="50"
                  VerticalAlignment="Center" GotFocus="textbox_Email_GotFocus" FontSize="28" GotTouchCapture="textbox_Email_GotTouchCapture"/>
        <Button Content="{x:Static properties:Resources.button_send_smth}" Name="button_send_smth" Height="60" Width="240" VerticalAlignment="Center" 
                Click="button_send_smth_Click" FontSize="28" BorderBrush="#00707070" Background="#FFE21414" FontFamily="SegoeUI"/>
    </StackPanel>
</Page>
