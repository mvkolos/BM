<Page x:Class="BigMoscow.Pages.PageMedia"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BigMoscow.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="1080" d:DesignWidth="1920"
      Title="PageMedia" Loaded="Page_Loaded">
    <Page.Background>
        <ImageBrush ImageSource="/BigMoscow;component/UI/MainScreen/mainscreenMain.jpg"/>
    </Page.Background>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition/>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button  Margin="50,350,400,350" Click="click_left">
            <Button.Background>
                <ImageBrush ImageSource="/BigMoscow;component/UI/MainScreen/arrow_left.png"/>
            </Button.Background>
        </Button>
        <Button Grid.Column="2"  Margin="400,350,50,350" Click="click_right" >
            <Button.Background>
                <ImageBrush ImageSource="/BigMoscow;component/UI/MainScreen/arrow_right.png"/>
            </Button.Background>
        </Button>
        <Canvas Grid.ColumnSpan="3" Name="canvas_media" Grid.Column="0" Margin="500,200"/>
    </Grid>
</Page>
